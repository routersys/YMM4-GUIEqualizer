<Window x:Class="ymm4_guiequalizer.GroupSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="グループ選択" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="プリセットのグループを選択してください:" Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" Name="GroupListBox" SelectionMode="Single" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" IsDefault="True" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="キャンセル" Width="75" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>