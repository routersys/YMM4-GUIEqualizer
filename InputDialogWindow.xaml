<Window x:Class="ymm4_guiequalizer.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="名前の入力" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="MessageLabel" Text="名前を入力してください:"/>
        <TextBox Grid.Row="1" Name="InputTextBox" Margin="0,5,0,10" VerticalContentAlignment="Center"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="キャンセル" Width="75" Margin="5,0,0,0" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>